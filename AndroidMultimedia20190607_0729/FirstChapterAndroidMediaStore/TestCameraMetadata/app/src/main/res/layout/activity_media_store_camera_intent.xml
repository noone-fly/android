<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView android:id="@+id/ReturnedImageView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/TitleTextView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Title:" />
    <EditText android:id="@+id/TitleEditView" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@android:drawable/edit_text"
        android:hint="请输入图片标题" />
    <TextView android:id="@+id/DescriptionTextView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Description" />
    <EditText android:id="@+id/DescriptionEditView" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@android:drawable/edit_text"
        android:hint="请输入图片详情" />
    <Button android:id="@+id/TakePictureButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="拍照" />
    <Button android:id="@+id/SaveDataButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="保存" />
</LinearLayout>
